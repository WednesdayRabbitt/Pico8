function bun()
	b.x+=b.dx
	b.spr=b.t%3
	
	--direction
	if(b.dx>0)then
		b.d=false
		b.t+=0.5
	elseif(b.dx<0)then
		b.d=true
		b.t+=0.5
	elseif(b.dx==0)then
		b.t=0
	end
	
--border control
	if(b.x>120)then
		b.x=120
		b.dx=0
	elseif(b.x<0)then
		b.x=0
		b.dx=0
	end
	
--bunny control
	if(btn(0))then
	 b.dx-=0.5
	elseif(btn(1))then
		b.dx+=0.5
	elseif(btn(3))then
		b.dx=0
	end
	
	spr(b.spr,b.x,b.y,1,1,b.d)
end

