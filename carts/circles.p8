function _init()
 cls()
	a=0
	b=0
	t=0
end

function _draw()
	for i=64,0,-1 do
		circfill(64,64,0+i,a+(t/5+i)%b)
	end
	
	print("b="..b,0,0,7)
	print("a="..a%16,103,0,7)

end

function _update()
	t+=1
	if (btnp(0)) then
		a-=1
	 rectfill(128,0,103,5,0)
	end
	if (btnp(1)) then
	 a+=1
	 rectfill(128,0,103,5,0)
	end
	if (btnp(2)) then
	 b+=1
	 rectfill(0,0,15,5,0)
	end
	if (btnp(3)) then
	 b-=1
	 rectfill(0,0,15,5,0)
	end
end
