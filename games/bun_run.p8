version 16
__lua__
function _init()
	t=0
	frame_delay=3
	background=0
	
	
	char={}
	char.frame=1
	char.size=4
	char.speed=1.5*char.size
	y=64-4*char.size
	x=-8*char.size
end

function _update()
	t+=1
	
	char_update()
	
	--move bun
	if(x<128)then
		x+=char.speed
	else
		x=-8*char.size
	end
end

function _draw()
	cls(background)
	--spr(frame,x,y)
	sspr(8*char.frame,0,8,8,x,y,8*char.size,8*char.size)
	rect(0,0,127,127,7)
end
-->8
function char_update()
 if(btnp(2))then
 	char.size+=1
 end
 
 if(btnp(3))then
 	char.size-=1
 end
 
 y=64-4*char.size
 char.speed=1.5*char.size
 
 if(t>=frame_delay)then
		char.frame=1+char.frame%4
		t=0
	end
end
